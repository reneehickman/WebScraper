	<header class="header">

<nav class="navbar navbar-expand-lg navbar-dark head">
  <a class="navbar-brand" href="/"> <span class="nhl"><img src="/images/nhl.png" height="50px;"></span>NHL Post</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/">Home</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/articles/saved">Saved Articles<span class="sr-only">(current)</span></a>
      </li>
    </ul>
  </div>
</nav>
	</header>


<div class="jumbotron text-center tron">
  <div class="inside">
        <h1>Saved Articles!</h1>
        </div>
</div>


<div class="container articles" id="articles">
  {{#if articles}}
    {{#each articles}}
     {{!-- {{#unless saved}} --}}
        <div class="card mb-3 cardz">
            <div class="card-body">
              <img class="img-fluid" src="{{this.image}}">
                <h3 class="card-title">
                    <a href="{{this.link}}" target="_blank" class="article-link">{{this.title}}</a>
                </h3>
                <p class="card-text">{{this.intro}}</p>

                    <form class="form-inline btnform" action="articles/{{this.id}}" method="POST">
                 <input type="hidden" name="saved" value="1">
                    <button type="button" class="btn btn-warning comments-btn half" href="#" data-toggle="modal" data-target="#{{this.id}}">Article Comments</button>
                    </form>

                <form class="form-inline btnform" action="/unsave/{{this.id}}" method="POST">
                 <input type="hidden" name="saved" value="1">
                    <button type="submit" class="btn btn-danger remove-btn half" data-id="{{this._id}}">Remove Article</button>
                    </form>

            </div>
        </div>
      {{!-- {{/unless}} --}}
    




<div class="modal fade" id="{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="commentsModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Comments for {{this.title}}</h4>
            </div>
            <div class="modal-body">
                {{#if this.comments}}
                    {{#each this.comments}}
                        <div class="well">
                            <div class="row">
                                <div class="col col-md-10">
                                    <p>{{this.body}}</p>
                                </div>
                                <div class="col col-md-2">
                                    <form class="form-inline" action="/articles/comments/{{this.id}}?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-danger">X</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                        <div class="nocomments">
                            <p>This story does not have any comments.</p>
                        </div>
                {{/if}}
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col col-md-8">
                        <form class="form-inline" action="/articles/{{this.id}}" method="POST">
                            <input type="text" class="form-control" id="text" name="text" placeholder="Add a new comment...">
                            <button type="submit" class="btn btn-info">Add Comment</button>
                        </form>
                    </div>
                    <div class="col col-md-4">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>





</div>
    {{/each}}


 {{else}}
        <div class="empty">
            <h4>There are no saved articles.</h4>
        </div>
    {{/if}}
</div>











