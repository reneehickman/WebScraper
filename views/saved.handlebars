	<header class="header">

<nav class="navbar navbar-expand-lg navbar-dark primary-color">
  <a class="navbar-brand" href="/">NHL Post</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/">Home</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/articles/saved">Saved Articles<span class="sr-only">(current)</span></a>
      </li>
    </ul>
  </div>
</nav>
	</header>

<div class="jumbotron text-center">
        <h1>Saved Articles!</h1>
</div>

<div class="container articles" id="articles">
    {{#each articles}}
     {{!-- {{#unless saved}} --}}
        <div class="card mb-3 cardz">
            <div class="card-body">
              <img class="img-fluid" src="{{this.image}}">
                <h3 class="card-title">
                    <a href="{{this.link}}" target="_blank" class="article-link">{{this.title}}</a>
                </h3>
                <p class="card-text">{{this.intro}}</p>

                    <form class="form-inline" action="articles/{{this.id}}" method="POST">
                 <input type="hidden" name="saved" value="1">
                    <button type="button" class="btn btn-default comments-btn" data-id="{{this._id}}">Article Comments</button>
                    </form>

                <form class="form-inline" action="articles/{{this.id}}" method="POST">
                 <input type="hidden" name="saved" value="1">
                    <button type="button" class="btn btn-default remove-btn" data-id="{{this._id}}">Remove from Saved</button>
                    </form>

            </div>
        </div>
      {{!-- {{/unless}} --}}
    {{/each}}
</div>

